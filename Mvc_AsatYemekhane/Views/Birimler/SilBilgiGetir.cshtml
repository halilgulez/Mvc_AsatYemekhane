@model Mvc_AsatYemekhane.Models.Entity.Birimler
@{
    ViewBag.Title = "SilBilgiGetir";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Birimler Silme Sayfası </h2>
<div class="container">
    @using (Html.BeginForm("Sil", "Birimler"))
    {
                <h4>Kayıt silinsin mi?</h4>
                <div class="form-group">
                    @Html.HiddenFor(x => x.ID)
                    @Html.TextBoxFor(x => x.Birim)
                    @Html.DisplayFor(x => x.Birim, new {@class = "form-control"})
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(x=>x.Aciklama)
                    @Html.DisplayFor(x=>x.Aciklama, new { @class = "form-control" }) 
                </div>
                <div class="form-group">
                    <button class="btn btn-danger">Birimi Sil</button> | <a href="/Birimler/Index/">Ana Sayfa</a>
                </div>
            }
</div>
