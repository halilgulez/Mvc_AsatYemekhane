@using Mvc_AsatYemekhane.Models.Entity

@model List<Mvc_AsatYemekhane.Models.Entity.Birimler>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Birimler Anasayfa</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <td>
                ID
            </td>
            <td>
                Birimler
            </td>
            <td>
                Açıklama
            </td>
            <td>
                Sil
            </td>
            <td>
                Güncelle
            </td>
        </tr>

    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ID</td>
                <td>@item.Birim</td>
                <td>@item.Aciklama</td>
                <td><a href="/Birimler/SilBilgiGetir/@item.ID" class="btn btn-danger">Sil</a></td>
                <td><a href="/Birimler/GuncelleBilgiGetir/@item.ID" class="btn btn-warning">Güncelle</a></td>
            </tr>
        }
            
    </tbody>
</table>
<div> 
    <a href="/Birimler/Ekle/" class="btn btn-success" style="margin-top:10px;">Birim Ekle</a>
</div>      